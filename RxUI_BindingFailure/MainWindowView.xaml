<Window x:Class="RxUI_BindingFailure.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="Aqua">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <ComboBox Grid.Row="0" x:Name="items" Margin="10" FontSize="24" ItemsSource="{Binding Items}">

        </ComboBox>

        <TextBlock Grid.Row="1" x:Name="theSelectedItem" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="Gray" FontSize="24"/>
        

        <Button Grid.Row="2" x:Name="goTo" Margin="5">Go</Button>

    </Grid>
</Window>
